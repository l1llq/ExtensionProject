{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Chrome Extension",
            "url": "https://www.amazon.com",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--disable-extensions-except=${workspaceFolder}",
                "--load-extension=${workspaceFolder}"
            ]
        }
    ]
}